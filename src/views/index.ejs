<%- include('partials/_header') %>
    <div class="container">
        <div class="row">
            <div class="col-md-5 position-absolute top-50 start-50 translate-middle">
                <div class="card">
                    <div class="card-body">
                        <form action="/add" method="POST">
                            <div class="form-group p-2">
                                <input type="text" name="title" placeholder="Inserta un titulo" class="form-control">
                            </div>
                            <div class="form-group p-2">
                                <textarea name="description" placeholder="Inserta una descripcion" class="form-control"></textarea>
                            </div>
                            <div class="form-group p-2">
                                <textarea name="tags" placeholder="Ingrese etiquetas" class="form-control"></textarea>
                            </div>
                            <div class="form-group p-2">
                                <p> Seleccione el video a cargar
                                    <input type="file" accept=".mp4">
                                </p>
                            </div>
                            <div class="form-group p-2">
                                <p>Seleccione la imagen en miniatura
                                    <input type="file" accept=".jpg">
                                </p>
                            </div>
                            <div>
                                <label name="fecha">La hora es: <%= new Date()%></label>
                            </div>
                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-danger btn-block">Subir video</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>
<%- include('partials/_footer') %>